{
  "builders": [{
    "type": "docker",
    "image": "ubuntu",
    "export_path": "image.tar"
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y --force-yes curl"
      ]
    },
    {
      "type": "chef-client",
      "server_url": "https://manage.chef.io/organizations/ckrst",
      "client_key": "./chef/packer.pem",
      "validation_client_name": "packer",
      "validation_key_path": "./chef/packer.pem",
      "run_list": ["git"],
      "skip_clean_client": true,
      "skip_clean_node": true
    }
  ],  

  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "vinik/web",
        "tag": "0.1"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "vinik",
        "login_password": "vinicius.kirst@gmail.com",
        "login_password": "meuscontainer"
      }
    ]
  ]
}
