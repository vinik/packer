{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "image.tar"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y --force-yes git apache2 php5 curl php5-curl php5-intl php5-mcrypt wget",
        "a2enmod php5",
        "a2enmod rewrite"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "vinik/web",
        "tag": "0.1"
      },
      {
        "type": "docker-tag",
        "repository": "vinik/web",
        "tag": "latest",
        "force": true
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "vinik",
        "login_email": "vinicius.kirst@gmail.com",
        "login_password": "meuscontainer"
      }
    ]
  ]
}
