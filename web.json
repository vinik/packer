{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "image.tar"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y --force-yes curl sudo"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["chef/cookbooks"],
      "run_list": ["ckrst", "git"]
    },

    {
      "type": "shell",
      "inline": [
        "apt-get install -y --force-yes apache2 php5 php5-curl php5-intl php5-mcrypt php5-mysql wget ssh",
        "a2enmod php5",
        "a2enmod rewrite"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "vinik/web",
        "tag": "0.1"
      },
      {
        "type": "docker-tag",
        "repository": "vinik/web",
        "tag": "latest",
        "force": true
      }
    ]
  ]
}
