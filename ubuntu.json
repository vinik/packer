{

  "description": "My base box",

  "variables": {
		"no_proxy": "{{env `no_proxy`}}",
		"preseed_path": "ubuntu-14.04/preseed.cfg"
	},
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:trusty",
      "export_path": "image.tar"
    },
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.4-server-amd64.iso",
      "iso_checksum": "2ac1f3e0de626e54d05065d6f549fa3a",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
			"ssh_port": 22,
			"ssh_wait_timeout": "10000s",
			"boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " auto=true",
        " priority=critical",
        " initrd=/install/initrd.gz",
				" preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed_path`}}<wait>",
        " -- ",
        "<enter>"
      ],
			"shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
			"boot_wait": "10s",
      "disk_size": 40960,
			"headless": false,
			"http_directory": "http",
			"vm_name": "s2way packer-ubuntu-14.04-amd64",
			"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "1024"],
				["modifyvm", "{{.Name}}", "--cpus", "1"]
			]
		}
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y --force-yes curl sudo"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["chef/cookbooks"],
      "run_list": ["ckrst", "git"]
    },

    {
      "type": "shell",
      "inline": [
        "pwd"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "vinik/ubuntu",
        "tag": "0.1",
        "only": ["docker"]
      },
      {
        "type": "docker-tag",
        "repository": "vinik/ubuntu",
        "tag": "trusty",
        "force": true,
        "only": ["docker"]
      },
      {
        "type": "docker-tag",
        "repository": "vinik/ubuntu",
        "tag": "latest",
        "force": true,
        "only": ["docker"]
      },


      {
        "type": "vagrant",
        "compression_level": 1,
        "override": {
          "vmware": {
            "compression_level": 0
          }
        },
        "only": ["virtualbox-iso"]
      }

    ]
  ]
}
